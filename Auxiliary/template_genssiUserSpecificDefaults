function default = genssiUserSpecificDefaults(optionName)
    % genssiUserSpecificDefaults defines ths user-specific defaults. This 
    % file can be altered by the user to personalize the settings.
    %
    % Parameters:
    %  optionName: name of option
    %
    % Return values:
    %  default: defualt values of option

    switch optionName
        case 'verbose'
            default = true;
        case 'noRank'
            default = false;
        case 'closeFigure'
            default = true; % Tom = true, Jan = false
        case 'store'
            default = true; % Tom = true, Jan = false
        case 'feedbackRequired'
            default = false; % Tom = false, Jan = true
        case 'reportCompTime'
            default = true; % Tom = true, Jan = false
    end
end
